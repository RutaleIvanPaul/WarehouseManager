<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/stock_receive_print_item_row_name"
            style="@style/NormalTextLabel"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="@string/goods" />

        <TextView
            android:id="@+id/stock_receive_print_item_row_accepted"
            style="@style/NormalTextLabel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/accepted" />

        <TextView
            android:id="@+id/stock_receive_print_item_row_declined"
            style="@style/NormalTextLabel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/declined" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="10dp"
        android:background="@color/mid_dark_grey" />
</LinearLayout>