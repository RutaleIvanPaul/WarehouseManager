<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/item_product_confirm_row_product_name"
        style="@style/SmallTextLabel"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:text="Tanga Fresh Mtindi 500ml" />

    <EditText
        android:id="@+id/item_product_confirm_row_agreed_amount"
        style="@style/SmallTextLabel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:enabled="false"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="728" />

    <EditText
        android:id="@+id/item_product_confirm_row_declined_amount"
        style="@style/SmallTextLabel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:enabled="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="45" />

    <TextView
        android:id="@+id/item_product_confirm_row_edit_action"
        style="@style/BoldTextSmallLabel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/edit"
        android:textColor="@color/ramani_green" />

</LinearLayout>
