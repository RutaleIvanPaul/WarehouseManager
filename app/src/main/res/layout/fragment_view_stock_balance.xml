<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp">

        <!-- Header -->

        <LinearLayout
            android:id="@+id/view_stock_balance_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView style="@style/backButton" />

            <TextView
                style="@style/BoldTextLabel"
                android:layout_marginStart="5dp"
                android:text="@string/view_stock_balance" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <!-- Date & Warehouse -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_outline_with_white_solid_round"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <!-- Date -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@mipmap/ic_calendar_blue" />

                    <TextView
                        style="@style/SmallTextLabel"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/date" />

                    <TextView
                        android:id="@+id/view_stock_balance_date"
                        style="@style/SmallTextLabel"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/date"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Warehouse -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@mipmap/ic_warehouse_blue" />

                    <TextView
                        style="@style/SmallTextLabel"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/warehouse" />

                    <TextView
                        android:id="@+id/view_stock_balance_warehouse_name"
                        style="@style/SmallTextLabel"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/warehouse"
                        android:textAlignment="textEnd"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <!-- Search Bar -->

            <androidx.appcompat.widget.SearchView
                android:id="@+id/return_items_searchbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/item_outline_with_white_solid_round"
                android:hint="Search products" />

            <!-- List -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/view_stock_balance_header"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp">

                <TextView
                    style="@style/SmallTextLabel"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:text="@string/product"
                    android:textStyle="bold" />

                <TextView
                    style="@style/SmallTextLabel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/available_balance"
                    android:textAlignment="textEnd"
                    android:textStyle="bold" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/view_stock_balance_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/view_stock_balance_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>