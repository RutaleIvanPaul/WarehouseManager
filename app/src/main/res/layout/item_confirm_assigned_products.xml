<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_confirm_assigned_product_name"
        style="@style/SmallTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/product"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_confirm_assigned_product_quantity"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_confirm_assigned_product_quantity"
        style="@style/SmallTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/quantity_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentEnd="true"
        app:layout_constraintStart_toEndOf="@+id/item_confirm_assigned_product_name"
        android:textColor="@color/black"
        android:textSize="9sp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/bottom_rule"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_confirm_assigned_product_name" />


</androidx.constraintlayout.widget.ConstraintLayout>