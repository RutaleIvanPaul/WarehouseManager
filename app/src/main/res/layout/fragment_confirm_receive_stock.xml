<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/products_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">
                <!-- Sign Part -->

                <!-- Store Keeper -->

                <TextView
                    style="@style/BoldTextLabel"
                    android:layout_marginTop="30dp"
                    android:text="@string/store_keeper" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stock_receive_confirm_store_keeper_name"
                        style="@style/NormalEditText"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:hint="@string/store_keeper_hint" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/stock_receive_confirm_sign_store_keeper"
                        style="@style/BlueStrokeActionButton"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:text="@string/sign" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:id="@+id/store_keeper_captured_image_preview"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:visibility="gone"/>

                <!-- Delivery Person -->

                <TextView
                    style="@style/BoldTextLabel"
                    android:layout_marginTop="30dp"
                    android:text="@string/delivery_person" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/stock_receive_confirm_delivery_person_name"
                        style="@style/NormalEditText"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:hint="@string/delivery_person_hint"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/stock_receive_confirm_sign_delivery_person"
                        style="@style/BlueStrokeActionButton"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:text="@string/sign" />

                </LinearLayout>

                <TextView
                    style="@style/BoldTextLabel"
                    android:layout_marginTop="30dp"
                    android:text="@string/supporting_document" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_grey_fill"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/gallery_support_doc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/image_blue" />

                        <TextView
                            style="@style/BoldTextLabelGrey"
                            android:layout_marginLeft="35dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/gallery" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@drawable/dotted_divider" />

                    <LinearLayout
                        android:id="@+id/take_photo_support_doc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/camera_blue" />

                        <TextView
                            style="@style/BoldTextLabelGrey"
                            android:layout_marginLeft="35dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/take_photo" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/supporting_docs_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:id="@+id/delivery_person_captured_image_preview"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>