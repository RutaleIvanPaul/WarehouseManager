<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/round_white_outline_with_no_borders"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:text="@string/uploading" >

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/image_icon" />

        <TextView
            style="@style/BoldTextLabelGrey"
            android:layout_centerInParent="true"
            android:letterSpacing="0.01"
            android:text="@string/view_file"
            android:id="@+id/view_file"
            android:textColor="#606060"
            android:textSize="10sp" />

        <View
            android:id="@+id/delete_file"
            android:layout_width="10dp"
            android:layout_height="14dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/delete_image" />

    </RelativeLayout>
</LinearLayout>