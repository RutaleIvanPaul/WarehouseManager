<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Common Styles -->

    <style name="backButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/ic_back_icon</item>
        <item name="android:contentDescription">Back</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="NormalTextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="BoldTextLabel" parent="NormalTextLabel">
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="BoldTextSmallLabel" parent="BoldTextLabel">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="NormalActionButton" parent="BoldTextLabel">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/blue_action_button</item>
        <item name="android:textColor">@color/light_lime_yellow</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomSpinner" parent="NormalTextLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_outline_round</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="spinner_arrow_gravity">end</item>
        <item name="spinner_arrow_padding">8dp</item>
        <item name="spinner_arrow_drawable">@drawable/ic_expand_icon</item>
        <item name="spinner_divider_color">@color/dark_grey</item>
        <item name="spinner_divider_show">true</item>
        <item name="spinner_divider_size">0.4dp</item>
        <item name="spinner_popup_animation">dropdown</item>
        <item name="spinner_popup_elevation">14dp</item>
    </style>
</resources>