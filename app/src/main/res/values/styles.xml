<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="BoldTextView">
        <item name="font">@font/raleway_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TopButton">
        <item name="font">@font/raleway</item>
        <item name="android:background">@drawable/top_button_active</item>
    </style>
    <!-- Common Styles -->

    <style name="backButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/ic_back_icon</item>
        <item name="android:contentDescription">Back</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="refreshButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/ic_refresh_icon</item>
        <item name="android:contentDescription">Refresh</item>
    </style>

    <style name="NormalTextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="BoldTextLabel" parent="NormalTextLabel">
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="BoldTextSmallLabel" parent="BoldTextLabel">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SmallTextLabel" parent="NormalTextLabel">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="LargeTextLabel" parent="NormalTextLabel">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NormalActionButton" parent="BoldTextLabel">
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/green_stroke_action_button</item>
        <item name="android:textColor">@color/light_lime_yellow</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NormalActionButtonInactive" parent="BoldTextLabel">
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/grey_stroke_next_action_button</item>
        <item name="android:textColor">@color/grey_inactive_button_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BlueStrokeActionButton" parent="NormalActionButton">
        <item name="android:background">@drawable/blue_stroke_action_button</item>
        <item name="android:textColor">@color/secondary_blue</item>
    </style>

    <style name="GreenFillActionButton" parent="NormalActionButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/green_action_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlueFillActionButton" parent="NormalActionButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/blue_action_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlueActionWithArrowButton" parent="BlueFillActionButton">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="NormalEditText" parent="NormalTextLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/item_outline_with_white_solid_round</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="GreyTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/deep_grey</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="CheckMarksSuccess">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_round_check_icon_42</item>
    </style>

    <!-- Tabs -->

    <style name="CommonTabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabTextColor">@color/dark_grey</item>
        <item name="tabSelectedTextColor">@color/ramani_green</item>
        <item name="tabIndicatorColor">@color/ramani_green</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="CustomSpinner" parent="NormalTextLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/item_outline_round</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="spinner_arrow_gravity">end</item>
        <item name="spinner_arrow_padding">8dp</item>
        <item name="spinner_arrow_show">true</item>
        <item name="spinner_arrow_tint">@color/ramani_green</item>
        <item name="spinner_divider_color">@color/dark_grey</item>
        <item name="spinner_divider_show">true</item>
        <item name="spinner_divider_size">0.4dp</item>
        <item name="spinner_popup_animation">dropdown</item>
        <item name="spinner_popup_background">@color/light_grey</item>
        <item name="spinner_popup_elevation">14dp</item>
    </style>

    <style name="CustomSpinnerRoundedOval" parent="NormalTextLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/item_outline_rounded_oval</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="spinner_arrow_gravity">end</item>
        <item name="spinner_arrow_padding">8dp</item>
        <item name="spinner_arrow_show">true</item>
        <item name="spinner_arrow_tint">@color/ramani_green</item>
        <item name="spinner_divider_color">@color/dark_grey</item>
        <item name="spinner_divider_show">true</item>
        <item name="spinner_divider_size">0.4dp</item>
        <item name="spinner_popup_animation">dropdown</item>
        <item name="spinner_popup_background">@color/light_grey</item>
        <item name="spinner_popup_elevation">14dp</item>
    </style>


    <!-- Stock Receive Styles -->
    <style name="CheckMarksForTabs">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_round_check_icon</item>
    </style>

    <style name="StockReceiveItemTitle" parent="NormalTextLabel">
        <item name="android:textColor">#969696</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">3dp</item>
    </style>

    <style name="StockReceiveSpinner" parent="CustomSpinner">
        <item name="android:background">@drawable/item_outline_with_white_solid_round</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ReceiptText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ReceiptText.SmallTextLabel" parent="SmallTextLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>